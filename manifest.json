{
  "manifest_version": 3,
  "name": "Clarity - Advanced Tab Manager",
  "version": "2.0.7",
  "description": "A beautiful and elegant tab management extension for Chrome with advanced features and stunning UI",
  "permissions": [
    "tabs",
    "storage",
    "windows",
    "activeTab",
    "contextMenus",
    "scripting",
    "tabGroups",
    "alarms",
    "notifications",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "action": {
    "default_title": "Clarity Tab Manager",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "commands": {
    "open_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open Clarity Side Panel"
    },
    "quick_search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Quick Tab Search"
    },
    "focus_search": {
      "suggested_key": {
        "default": "Ctrl+K"
      },
      "description": "Focus Search Bar"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*"],
      "matches": ["*://*/*"]
    }
  ]
}
